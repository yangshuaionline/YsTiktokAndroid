<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--文本内容-->
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:text="" />

    <!--控制展开收起-->
    <LinearLayout
        android:id="@+id/ll_expan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_expan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开全部"
            android:textColor="@color/text_sub_dark"
            android:textSize="@dimen/base_font_size_14" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_filter_arrow_uncheck" />

    </LinearLayout>


</LinearLayout>