<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    tools:ignore="ResourceName">
    <ImageView
        android:id="@+id/dialog_iv_add_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_add_image"/>
    <TextView
        android:id="@+id/alert_dialog_tv_message_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:textColor="@color/text_999999"
        android:text="测试"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/alert_dialog_scroll_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alert_dialog_tv_message_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dialog_layout_padding"
            android:text="测试"
            android:visibility="visible"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/alert_dialog_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/alert_dialog_tv_message_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:visibility="visible"
        android:text="测试"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_1B3F8D"
        android:textSize="11sp" />
    <TextView
        android:id="@+id/alert_dialog_tv_message_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="visible"
        android:text="测试"
        android:paddingVertical="10dp"
        android:paddingHorizontal="@dimen/dialog_layout_padding"
        android:layout_marginTop="10dp"
        android:background="@color/text_FFFAEE"
        android:textColor="@color/text_FF8D1F"
        android:textSize="11sp" />
    <TextView
        android:id="@+id/alert_dialog_tv_message_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="测试"
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_FF8D1F"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/alert_dialog_layout_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:gravity="top"
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:layout_marginTop="10dp">
        <CheckBox
            android:button="@drawable/base_selector_cbox_btn"
            android:id="@+id/alert_dialog_cb_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:textColor="#999999"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/alert_dialog_tv_link"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="《测试》"
            android:textColor="@color/text_333333"
            android:textSize="11sp"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>