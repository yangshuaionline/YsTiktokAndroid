<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_333333"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                android:text="您当前为非工商注册主体企业，您可以提交申请，小筱投行将会与您取得联系，协助您完成上市计划书。"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/base_gray_radius_3"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="15dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_333333"
                        android:textSize="15sp"
                        android:text="姓名"/>
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLength="10"
                        android:hint="请输入您的姓名"
                        android:textColor="@color/text_333333"
                        android:background="@color/transparent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_EFEFEF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="15dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_333333"
                        android:textSize="15sp"
                        android:text="手机号"/>
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLength="11"
                        android:hint="请输入手机号"
                        android:textColor="@color/text_333333"
                        android:background="@color/transparent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:button="@drawable/base_selector_cbox_btn"
                    android:id="@+id/cbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/text"
                    android:text="我已阅读并同意"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_logout_text"
                    android:textSize="12sp"
                    android:textColor="@color/basetext"
                    android:text="《授权服务协议》"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_go_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@drawable/base_blue_radius_storke_3"
                android:gravity="center"
                android:text="暂不签署"
                android:textSize="15sp"
                android:textColor="@color/color_blue_dark" />
            <TextView
                android:id="@+id/tv_go_authorize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@drawable/base_blue_blue_radius_3"
                android:gravity="center"
                android:text="立即授权"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>