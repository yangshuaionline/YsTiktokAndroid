<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">
    <LinearLayout
        android:id="@+id/dialog_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/dialog_btn_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="9.5dp"
            android:background="@drawable/base_white_gray_radius_3"
            android:text="取消"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/text_333333"
            android:textSize="12dp"
            android:visibility="visible" />
        <Button
            android:id="@+id/dialog_btn_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="9.5dp"
            android:background="@drawable/base_blue_blue_radius_3"
            android:text="确定"
            android:layout_marginLeft="2.5dp"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:layout_marginBottom="10dp"
        android:paddingTop="20dp"
        android:visibility="gone"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/dialog_btn_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="7.5dp"
            android:background="@drawable/base_blue_blue_radius_3"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="确定" />
    </LinearLayout>
    <TextView
        android:id="@+id/dialog_tv_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text=""
        android:layout_marginHorizontal="@dimen/dialog_layout_padding"
        android:textColor="@color/text_blue"
        android:textSize="12dp"
        android:visibility="gone" />
</LinearLayout>